{% extends 'CmfBlockBundle:Block:block_base.html.twig' %}

{% block block %}
	{% if block.title %}
	    <div class="content-block-title">
	        <h2>{{ block.title }}</h2>
	    </div>
    {% endif %}

	<div class="content-block-content">
	    <div class="content-block-body">
	    	{{ block.body|raw }}
			<div class="content-form">
			    <form name="contactForm" action="{{ path('send_message') }}" method="post">
					<div class="contact-sender">
						<input type="text" id="contact_name" name="name" placeholder="Voor- en achternaam" />
						<div id="error-name" style="display:none;">De naam mag alleen letters bevatten</div>
					</div>
					<div class="contact-email">
						<input type="text" id="contact_email" name="email" placeholder="E-mailadres" />
						<div id="error-email" style="display:none;">Voer een correct emailadres in</div>
					</div>
					<div class="contact-subject">
						<input type="text" id="contact_subject" name="subject" placeholder="Onderwerp" />
					</div>
					<div class="contact-message">
						<textarea name="body" id="contact_body" placeholder="Uw bericht"></textarea>
					</div>
					<input type="submit" value="Versturen" name="submit" />
				</form>
			    {% for flashMessage in app.session.flashbag.get('notice') %}
				    <div class="flash-notice">
				        {{ flashMessage }}
				    </div>
				{% endfor %}
		    </div>
		</div>
		<div style="clear:both"></div>
    </div>
{% endblock %}