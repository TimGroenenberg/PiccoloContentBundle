{% extends 'CmfBlockBundle:Block:block_base.html.twig' %}
{% block block %}
    {% if block.title %}
	    <div class="content-block-title">
	        <h2>{{ block.title|raw }}</h2>
	    </div>
    {% endif %}

	<div class="content-block-content">
	    <div class="content-block-body">
	    	{{ block.body|raw }}

		    <div class="media">
		    	{% if block.url %}
			    	{% if block.url starts with 'http://w' %}
			    		<iframe width="100%" height="540" src="//www.youtube.com/embed/{{ block.url[31:] }}?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
			    	{% elseif block.url starts with 'https://w' %}
			    		<iframe width="100%" height="540" src="//www.youtube.com/embed/{{ block.url[32:] }}?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
			    	{% elseif block.url starts with 'http://y' %}
			    		<iframe width="100%" height="540" src="//www.youtube.com/embed/{{ block.url[16:] }}?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
			    	{% elseif block.url starts with 'www' %}
			    		<iframe width="100%" height="540" src="//www.youtube.com/embed/{{ block.url[24:] }}?rel=0&amp;showinfo=0" frameborder="0" allowfullscreen></iframe>
			    	{% endif %}
			    {% endif %}
		    </div>
	    </div>
    </div>
{% endblock %}