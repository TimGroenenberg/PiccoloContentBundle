{% if block.dashifiedId is defined %}
<div id="block{{ block.dashifiedId }}" class="cmf-block {{ block.dashifiedType }}">
{% else %}
<div id="cms-block-{{ block.id }}" class="cms-block cms-block-element">
{% endif %}

{% block block %}
    {% if block.title %}
        <div class="content-block-title">
            <h2>{{ block.title|raw }}</h2>
        </div>
    {% endif %}

    <div class="content-block-content">
	<p>{{ block.body|raw }}</p>

	{{ render(controller('ConnectHollandPiccoloContentBundle:Default:generateGoogleMap', { 'address': block.address })) }}
    </div>
{% endblock %}
</div>

<style type="text/css">
    #map_canvas {
        width: 100% !important;
        height: 300px !important;
    }
</style>